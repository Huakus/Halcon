
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Google Drill Down Chart</h2>

<div id="chart" style="width:80%; height:300px">

</div>

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
@section scripts{
    <script>
        var chartDataYear;
        var chartDataMonth;
        var chartDataDay;
        var chartDataHour;
        var GlobalYear;
        var GlobalMonth;
        var CurrentReport;
        var rowLevel;
        google.load("visualization", "1", { packages: ["corechart"] });

        //Load Year Wise Report On Load
        $(document).ready(function () {
            $.ajax({
                url: '/Reportes/InsectosDataAño',
                type: 'get',
                dataType: 'json',
                data: {},
                success: function (d) {
                    chartDataYear = d;
                },
                error: function () {
                }
            }).done(function () {
                CurrentReport = 'Año';
                generateChart(chartDataYear, "Insectos registrados por año", selectYear);
            });
        });

        function generateChart(chartData, title, selectEvent) {
            var data = google.visualization.arrayToDataTable(chartData);

            var options = {
                title: title,
                pointSize: 5,
                focusTarget: "category",
                hAxis: {showTextEvery: 1}
            }

            var lineChart = new google.visualization.LineChart(document.getElementById('chart'));
            if (selectEvent != null) {
                google.visualization.events.addListener(lineChart, 'select', function () {
                    selectEvent(lineChart, data);
                });
            }
            GenerateBack(CurrentReport);
            lineChart.draw(data, options);
        }

        function GenerateBack(currentReport) {
            $('.backButtonContainer').remove();
            //Create new Back Button
            if (currentReport != 'Año') { //back button except year
                var $back = $('<button/>')
                            .text('Atras')
                            .addClass('botonAtras')
                            .click(function () {
                                switch (currentReport) {
                                    case 'Mes':
                                        CurrentReport = 'Año';
                                        generateChart(chartDataYear, "Insectos registrados por año", selectYear);
                                        break;
                                    case 'Dia':
                                        CurrentReport = 'Mes';
                                        generateChart(chartDataMonth, "Insectos registrados por mes en el año " + rowLevel, selectMonth);
                                        break;
                                    case 'Hora':
                                        CurrentReport = 'Dia';
                                        generateChart(chartDataDay, "Insectos registrados por día en el mes de " + rowLevel + " del año " + GlobalYear, SelectDay);
                                        break;
                                    default:

                                }
                                $(this).parent().remove();
                            });
                var $div = $('<div/>')
                        .addClass('backButtonContainer')
                        .css({ 'width': '70%', 'text-align': 'right', 'padding': '5px' })
                        .append($back);
                $('#chart').before($div);

            }
        }

        function selectYear(chart, data) {
            //Year Event (after select year data from chart)
            var selectedItem = chart.getSelection()[0];
            if (selectedItem) {
                rowLevel = parseInt(data.getValue(selectedItem.row, 0));
                var chartData = null;
                $.ajax({
                    url: '/Reportes/InsectosDataMes',
                    type: 'get',
                    dataType: 'json',
                    data: {'Año': rowLevel},
                    success: function (d) {
                        chartDataMonth = d;
                    },
                    error: function () {
                        alert("Error!");
                    }
                }).done(function () {
                    CurrentReport = 'Mes';
                    GlobalYear = rowLevel;
                    generateChart(chartDataMonth, "Insectos registrados por mes en el año " + rowLevel, selectMonth);
                });

            }

        }

        function selectMonth(chart, data) {
            //Month Event (after select month data from chart)
            //Load Chart Day wise
            var selectedItem = chart.getSelection()[0];
            if (selectedItem) {
                rowLevel = data.getValue(selectedItem.row, 0);
                $.ajax({
                    url: '/Reportes/InsectosDataDia',
                    type: 'get',
                    dataType: 'json',
                    data: {'Año': GlobalYear, 'Mes': rowLevel},
                    success: function (d) {
                        chartDataDay = d;
                    },
                    error: function () {
                        alert('Error!');
                    }
                }).done(function () {
                    CurrentReport = 'Dia';
                    GlobalMonth = rowLevel;
                    generateChart(chartDataDay, "Insectos registrados por día en el mes de " + rowLevel + " del año " + GlobalYear, SelectDay);
                });
            }
        }

        function SelectDay(chart, data) {
            //Month Event (after select month data from chart)
            //Load Chart Day wise
            var selectedItem = chart.getSelection()[0];
            if (selectedItem) {
                rowLevel = parseInt(data.getValue(selectedItem.row, 0));
                $.ajax({
                    url: '/Reportes/InsectosDataHora',
                    type: 'get',
                    dataType: 'json',
                    data: { 'Año': GlobalYear, 'Mes': GlobalMonth, 'Dia': rowLevel },
                    success: function (d) {
                        chartDataHour = d;
                    },
                    error: function () {
                        alert('Error!');
                    }
                }).done(function () {
                    CurrentReport = 'Hora';
                    generateChart(chartDataHour, "Insectos registrados por hora en el día " + rowLevel + " de " + GlobalMonth + " del año " + GlobalYear, null);
                });
            }
        }
    </script>
}